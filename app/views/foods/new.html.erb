<%= form_with(model: @food, url: foods_path, local: true) do |form| %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name, placeholder: "Enter Food Name" %>
  </div>

  <div>
    <%= form.label :measurement_unit, style: "display: block" %>
    <%= form.text_field :measurement_unit, placeholder: "Enter Measurement Unit" %>
  </div>

  <div>
    <%= form.label :price, style: "display: block" %>
    <%= form.text_field :price, placeholder: "Enter Food Price" %>
  </div>

  <div>
    <%= form.label :quantity, style: "display: block" %>
    <%= form.text_field :quantity, placeholder: "Enter Food Quantity" %>
  </div>

   <div>
    <%= form.submit "Create New Food" %>
  </div>
<% end %>