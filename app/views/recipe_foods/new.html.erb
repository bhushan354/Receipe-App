<div class="col-md-6 text-center" style="background: linear-gradient(to right, #343A40, #343A40); color: #fff; padding: 20px; border-radius: 10px; width: 100vw; height: 100vh;">

  <h2 class="mb-4">Add Ingredient</h2>
  <hr class="border border-primary border-2 opacity-50">
  
  <%= form_with(model: @recipe_food, url: recipe_recipe_foods_path, local: true) do |form| %>
    <div class="mb-3">
      <%= form.label :quantity, style: "display: block", class: "fw-bold form-label text-light" %>
      <%= form.number_field :quantity, class: "form-control form-control-sm" %>
    </div>
  
    <div class="mb-3">
      <%= form.label :food_id, style: "display: block", class: "fw-bold form-label text-light" %>
      <%= form.collection_select :food_id, current_user.foods, :id, :name, { include_blank: false }, class: 'form-control form-control-sm' %>
    </div>
  
    <div class="mb-3">
      <%= form.submit "Create Ingredient", class: 'btn btn-success' %>
    </div>
  <% end %>

</div>
